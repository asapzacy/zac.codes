{
  "parser": "babel-eslint",
  "env": {
    "es6": true,
    "browser": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
  },
  "extends": "standard",
  "rules": {
    "semi": [ 2, "never" ],
    "no-extra-semi": 2,
    "space-before-function-paren": [ "error", "never" ],
    "padded-blocks": "off"
  }
}
